<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alarma">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Hora mostrada -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienes una alarma a las:"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/amarillo"
                android:textSize="64sp"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:id="@+id/tvSeparador1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/amarillo"
                android:textSize="64sp"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/tvMinutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/amarillo"
                android:textSize="64sp"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-black"/>


        </LinearLayout>

        <!-- Botón Editar Hora -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/añadirAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Alarma"
            android:textColor="@color/negro"
            app:cornerRadius="50dp"
            app:backgroundTint="@color/amarillo"
            android:layout_marginTop="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quitarAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desactivar alarma"
            android:textColor="@color/negro"
            app:cornerRadius="50dp"
            app:backgroundTint="@color/amarillo"
            android:layout_marginTop="32dp"/>


    </LinearLayout>
</FrameLayout>